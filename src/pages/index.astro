---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
// Projects section TBD
const cactusTech: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "vid2densepose",
		desc: "Convert your videos to densepose and use it on MagicAnimate.",
		href: "https://github.com/Flode-Labs/vid2densepose",
	},
	{
		title: "¿Qué Propones?",
		desc: "Ask presidential candidates about their proposals.",
		href: "https://www.quepropones.com.ar/",
	},
	{
		title: "welook-moments-scraper",
		desc: "Scraper to download Welook POAP Moments from welook.io.",
		href: "https://github.com/tadeodonegana/welook-moments-scraper",
	},
	{
		title: "Took",
		desc: "A twitter bot that tweets books.",
		href: "https://github.com/tadeodonegana/took",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			Machine Learning Developer at <a
				class="cactus-link inline-block"
				href="https://www.lemon.me/"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="github repository">Lemon Cash</a
			>. Bachelor’s degree student in AI at the <a
				class="cactus-link inline-block"
				href="https://www.palermo.edu/"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="github repository">University of Palermo</a
			>. Building cool stuff at <a
				class="cactus-link inline-block"
				href="https://www.flode.tech/"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="github repository">Flode</a
			>. Passionate about problem-solving and learning new things.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<!-- Projects section TBD -->
